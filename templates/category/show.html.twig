{% extends "base.html.twig" %}

{% block title %}Program By Category{% endblock %}

{% block body %}
    {% if categoryName != null %}
        <h1>Liste des séries par categories</h1>
        <ul> 
        <h2>{{ categoryName }}</h2>
            {% for program in programs %}
                <li>
                    <p>{{ program.id }} : {{ program.title }}</p>
                    <p>{{ program.summary }}</p>
                    <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
                </li>
            {% endfor %}
        </ul>
        {% else %}
        <p>Aucune série n'a été trouvée pour cette catégorie</p>
    {% endif %}
{% endblock %}